<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActivityMain">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNid"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lblNid"
        android:layout_toRightOf="@+id/lblNid"
        android:layout_toEndOf="@+id/lblNid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nid"
        android:id="@+id/lblNid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLatitud"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lblLatitud"
        android:layout_alignTop="@id/lblLatitud"
        android:layout_toEndOf="@+id/lblLatitud" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latitud"
        android:id="@+id/lblLatitud"
        android:layout_below="@id/txtNid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLongitud"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lblLongitud"
        android:layout_alignTop="@id/lblLongitud"
        android:layout_toEndOf="@+id/lblLongitud" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Longitud"
        android:id="@+id/lblLongitud"
        android:layout_below="@id/txtLatitud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTaxonomia"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lblTaxonomia"
        android:layout_alignTop="@id/lblTaxonomia"
        android:layout_toEndOf="@+id/lblTaxonomia" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Taxonomia"
        android:id="@+id/lblTaxonomia"
        android:layout_below="@id/txtLongitud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtJardin"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lblJardin"
        android:layout_alignTop="@id/lblJardin"
        android:layout_toEndOf="@+id/lblJardin" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jardin"
        android:id="@+id/lblJardin"
        android:layout_below="@id/txtTaxonomia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/txtJardin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
